# Production Environment Configuration
# Copy this to .env.production and fill in your values

# Environment
NODE_ENV=production
HEADLESS_MODE=true

# Application
NEXT_PUBLIC_APP_URL=https://your-domain.com
PORT=3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview  # Will use GPT-5 Nano when available

# LinkedIn Runner Configuration
RUNNER_TOKEN=generate_secure_token_here
RUNNER_USER_DATA_DIR=/data/linkedin-sessions
RUNNER_SCREENSHOTS_DIR=/data/screenshots
RUNNER_TIMEZONE=America/New_York

# Rate Limiting
RATE_LIMIT_DAILY_CAP=100
RATE_LIMIT_HOURLY_CAP=20
RATE_LIMIT_PER_MINUTE=3
RATE_LIMIT_COOLDOWN_MS=60000

# Security
JWT_SECRET=generate_32_byte_secret
ENCRYPTION_KEY=generate_32_byte_key
CSRF_SECRET=generate_csrf_secret
SESSION_SECRET=generate_session_secret

# Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production
LOG_LEVEL=info

# Database
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_CONNECTION_TIMEOUT=60000

# Redis (for queue management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Email Notifications
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
ALERT_EMAIL=team@your-domain.com

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_AUTO_APPROVAL=false
FEATURE_BULK_OPERATIONS=true

# Performance
MAX_CONCURRENT_BROWSERS=3
BROWSER_TIMEOUT_MS=60000
TASK_PROCESSING_INTERVAL_MS=10000

# Quiet Hours (UTC)
QUIET_HOURS_ENABLED=true
QUIET_HOURS_START=02:00
QUIET_HOURS_END=10:00

# LinkedIn Safety
LINKEDIN_MAX_MESSAGES_PER_DAY=100
LINKEDIN_MAX_CONNECTION_REQUESTS_PER_DAY=50
LINKEDIN_DETECTION_COOLDOWN_HOURS=24

# Cost Management
OPENAI_DAILY_BUDGET_USD=10.00
OPENAI_ALERT_THRESHOLD_USD=8.00

# Debug (set to false in production!)
DEBUG_MODE=false
VERBOSE_LOGGING=false